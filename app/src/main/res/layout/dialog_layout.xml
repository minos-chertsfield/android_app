<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoritesActivity">


    <ImageView
        android:id="@+id/commodity_to_cart"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@color/colorOrange"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/price_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/commodity_to_cart"
        android:layout_toRightOf="@+id/commodity_to_cart"
        android:text="@string/app_name"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />


    <TextView
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="购买数量"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num_subtract"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/num_subtract" />

            <TextView
                android:id="@+id/btn_num"
                android:layout_width="30dp"
                android:textAlignment="center"
                android:layout_height="30dp"
                android:text="1" />

            <Button
                android:id="@+id/num_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/num_add" />


        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/btn_cart_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:background="@drawable/btn_ripple_low"
        android:textColor="@color/colorWhite"
        android:text="确定" />

</RelativeLayout>