<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeContentActivity">




        <ImageView
            android:id="@+id/content_cover"
            android:layout_marginTop="80dp"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_marginTop="300dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_marginStart="50dp"
                android:scaleType="centerCrop"
                android:id="@+id/content_head"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/content_username"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        </LinearLayout>



        <WebView
            android:layout_marginTop="80dp"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="380dp"/>

    <TextView
        android:layout_marginTop="480dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="评论区"/>

        <FrameLayout
            android:id="@+id/recipe_comment"
            android:layout_marginTop="480dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:name="com.minos.slaver.Fragment_Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </FrameLayout>



    <HorizontalScrollView
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/recipe_share"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_share_black_24dp"
                android:background="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:background="@color/colorWhite"
                android:text="分享"/>
            <ImageButton
                android:id="@+id/recipe_favorite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:background="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:background="@color/colorWhite"
                android:text="收藏"/>
        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>