<?xml version="1.0" encoding="utf-8"?>
<!--滚动面板-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="none">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/viewpager"
        android:background="@color/colorWhite"
        android:layout_marginBottom="0dp"
        tools:ignore="NotSibling,UnknownId">

        <RelativeLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="90dp"
            android:background="@color/colorWhite">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorWhite"/>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="#66000000"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="标题"
                    android:background="#66000000"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />


                <!--存放小圆点的容器-->
                <LinearLayout
                    android:id="@+id/ll_point_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"/>

            </LinearLayout>

        </RelativeLayout>

        <!--首页内容-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="300dp">

            <!--<TextView-->
                <!--android:id="@+id/text_c"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="d" />-->

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_community"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/circle_button2"
                        android:src="@drawable/ic_people_black_24dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="社区"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <!--商城按钮-->
                <LinearLayout
                    android:layout_marginRight="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageButton
                    android:id="@+id/shop"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:background="@drawable/circle_button3"
                    android:src="@drawable/ic_store_mall_directory_black_24dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商城"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <!--菜谱-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/recipe"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/circle_button"
                        android:src="@drawable/ic_library_books_black_24dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="菜谱"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

        </LinearLayout>



        </FrameLayout>

        <android.support.v7.widget.CardView
            android:layout_marginTop="400dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="今日推荐"
                android:textSize="26dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/today_recommend"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="150dp"/>

            <ListView
                android:id="@+id/queue"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>





</ScrollView>
