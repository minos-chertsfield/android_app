<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.minos.slaver.VideoActivity">








    <FrameLayout
        android:layout_marginTop="260dp"
        android:id="@+id/container_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/video_title"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="名称"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <Button
                    android:text="返回"
                    android:id="@+id/back_to"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/btn_ripple_low"
                    android:layout_marginRight="5dp"
                    android:layout_width="60dp"
                    android:layout_height="40dp" />

                <Button
                    android:text="分享"
                    android:id="@+id/share"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/btn_ripple_low"
                    android:layout_marginRight="5dp"
                    android:layout_width="60dp"
                    android:layout_height="40dp" />

                <Button
                    android:text="收藏"
                    android:layout_marginRight="5dp"
                    android:id="@+id/video_favorite"
                    android:layout_width="60dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/btn_ripple_low"
                    android:layout_height="40dp" />

            </LinearLayout>


                <TextView
                    android:layout_marginTop="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论区"
                    android:textSize="26sp"
                    android:textStyle="bold" />

        </RelativeLayout>


        <fragment
            android:name="com.minos.slaver.Fragment_Comment"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"/>

    </FrameLayout>


        <RelativeLayout
            android:id="@+id/container_R"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <VideoView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>



</RelativeLayout>