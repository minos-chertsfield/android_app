<?xml version="1.0" encoding="utf-8"?>
<!--购物车列表卡片式布局-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_margin="10dp"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">


        <!--显示相应的商品图片-->
        <ImageView
            android:id="@+id/cart_image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="11dp"
            android:scaleType="centerCrop" />


        <!--显示商品的名称-->
        <TextView
            android:id="@+id/cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:layout_marginStart="200dp"
            android:layout_marginTop="18dp"
            android:text="名字"
            android:textSize="20sp" />

        <!--显示商品的价格-->
        <TextView
            android:id="@+id/cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cart_name"
            android:layout_centerVertical="true"
            android:text="价格"
            android:textSize="18sp" />

        <!--显示商品的数量-->
        <TextView
            android:id="@+id/cart_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cart_name"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="23dp"
            android:text="数量"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/delete_from_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cart_num"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/choose_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cart_name"
            android:layout_alignEnd="@+id/delete_from_cart"
            android:visibility="gone"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>